<div class="wideColumn">

  <h1><%= t('home.welcome') %></h1>

  <%= simple_format t('home.message') %>

  <div align="center" class="image_avater">
      <div class="secondRow">
        <a class="hotel" href="http://hotel.tasawr<%= @domain_suffix %>?lan=<%= I18n.locale.to_s == 'en' ? 'en' : 'ar' %>"></a>
        <a class="car_rental" href="http://carrental.tasawr<%= @domain_suffix %>?lan=<%= I18n.locale.to_s == 'en' ? 'en' : 'ar' %>"></a>
      </div>
      <div class="thirdRow">
        <a class="news_logo" href="http://news.tasawr.net?locale=<%= I18n.locale.to_s == 'en' ? 'eng' : 'ara' %>"></a>
        <a class="relestate" href="http://realestate.tasawr<%= @domain_suffix %>?lan=<%= I18n.locale.to_s == 'en' ? 'en' : 'ar' %>"></a>
      </div>
  </div>
</div>

<div class="narrowColumn">
  <% if !logged_in? %>
    <%= render :partial => 'sessions/login_and_registration_boxes' %>
  <% else %>
    <%= render :partial => 'users/account_settings_box' %>
  <% end %>
</div>

<script type="text/javascript">
  <% if !@user.errors.empty? %>
    $('#errorMessages').dialog({modal: true});
  <% end %>
</script>