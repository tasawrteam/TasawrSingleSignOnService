<div class="smallBox mtop register-fields">
  <div class="smBoxTop">
    <div class="titleBgLeft"></div>
    <div class="titleBgMid">
      <h1><%= t('heading.REGISTER')%></h1>
    </div>
    <div class="titleBgRight"></div>
  </div>

  <div class="smBoxMid">
    <div class="n_smboxmid">
      <div class="singInRow ">
        <div id='errorMessages' title='Error messages'>
          <%= error_messages_for :user %>
        </div>
        <% form_for :user, :url => users_path do |f| -%>
          <div class="textRow">
            <label><%= t('form.EmailID')%></label>
            <span>:</span>
            <%= f.text_field :email %>
          </div>
          <div class="textRow">
            <label><%= t('form.Password')%></label>
            <span>:</span>
            <%= f.password_field :password %>
          </div>
          <div class="textRow">
            <label><%= t('form.ReenterPassword')%></label>
            <span>:</span>
            <%= f.password_field :password_confirmation %>
          </div>
          <div class="textRow">
            <label><%= t('form.Birthday')%></label>
            <span>:</span>
            <%= f.text_field :birthday %>
          </div>
          <div class="textRow">
            <label><%= t('form.Mobile')%></label>
            <span>:</span>
            <%= f.text_field :mobile %>
          </div>

          <div class="textRow2">
            <label><%= t('form.Gender')%></label>
            <span>:</span>
            <%= f.radio_button :gender, 'male' %>

            <p><%= t('form.Male')%></p>
            <%= f.radio_button :gender, 'female' %>

            <p><%= t('form.Female')%></p>
          </div>

          <div class="textRow2 clear ">
            <label><%= t('form.Agreement')%></label>
            <span>:</span>
            <%= f.check_box :terms_and_conditions %>

            <div class="ch_top"><%= t('form.iAgree', :link => link_to(t('nav.TermsConditions'), static_page_url(:name => 'terms_and_conditions'))) %></div>
          </div>

          <div class="letbutton">
            <input class="letBtn" name="" type="submit" value="<%= t('form.LetMeIn')%>"/>
          </div>
        <% end %>
      </div>
    </div>
    <div class="smBoxBot"></div>
  </div>
</div>