<div class="smallBox">
  {% if login_sub_view == nil %}
    <div class="smBoxTop">
      <div class="titleBgLeft"></div>
      <div class="titleBgMid">
        <h1>SIGN IN </h1>
      </div>
      <div class="titleBgRight"></div>
    </div>

    <div class="smBoxMid">
      <div class="n_smboxmid">
        <form action="{{session_path}}" method="POST">
          {% form_authenticity_token %}
          <div class="singInRow">
            <div style='text-align: center'>
              <div style="margin-left: 35px;;text-align: center; margin-bottom: 20px;float:left;">
                <fb:login-button perms="email,publish_stream,create_event,rsvp_event"
                                 length='short' size='small'
                                 onlogin='window.location.reload()'/>
              </div>

              <div style="float:left; margin-left: 20px;">
                <a href="{{connect_twitter_session_path}}"><img src="http://a0.twimg.com/images/dev/buttons/sign-in-with-twitter-d-sm.png" alt="Sign in with twitter"/></a>
              </div>
            </div>
            <div class='clear'></div>

            <div class="textRow">
              <label for="fld_email">Email ID</label>
              <span>:</span>
              <input id="fld_email" type="text" name='email'/>
            </div>
            <div class="textRow">
              <label for="fld_password">Password</label>
              <span>:</span>
              <input type="password" name='password' id="fld_password"/>
            </div>
            <div class="gobutton textRow">
              <label><a href='{{forgot_password_url}}'>Forgot password?</a></label>
              <input class="goBtn" name="" type="submit" value="Go!"/>
            </div>
          </div>
        </form>
      </div>
      <div class="smBoxBot"></div>
    </div>
  {% else %}
  Sub
    <%= render :partial => 'users/' + @login_sub_view.to_s %>
  {% endif %}
</div>

<div class="smallBox mtop">
  <div class="smBoxTop">
    <div class="titleBgLeft"></div>
    <div class="titleBgMid">
      <h1>REGISTER</h1>
    </div>
    <div class="titleBgRight"></div>
  </div>

  <div class="smBoxMid">
    <div class="n_smboxmid">
      <div class="singInRow">
        <div id='errorMessages' title='Error messages'>
          {% error_messages_for user %}
        </div>
        <form action="{{users_path}}" method="POST">
          {% form_authenticity_token %}

          <div class="textRow">
            {% field_label 'user', 'email', 'Email ID' %}
            <span>:</span>
            {% text_field 'user', 'email' %}
          </div>
          <div class="textRow">
            {% field_label 'user', 'password', 'Password' %}
            <span>:</span>
            {% password_field 'user', 'password' %}
          </div>
          <div class="textRow">
            {% field_label 'user', 'password_confirmation', 'Re-enter Password' %}
            <span>:</span>
            {% password_field 'user', 'password_confirmation' %}
          </div>
          <div class="textRow">
            {% field_label 'user', 'birthday', 'Birthday' %}
            <span>:</span>
            {% text_field 'user', 'birthday' %}
          </div>
          <div class="textRow">
            {% field_label 'user', 'mobile', 'Mobile' %}
            <span>:</span>
            {% text_field 'user', 'mobile' %}
          </div>

          <div class="textRow2">
            {% field_label 'user', 'gender', 'Gender' %}
            <span>:</span>
            {% radio_button 'user', 'gender', 'male' %}

            <p>Male</p>
            {% radio_button 'user', 'gender', 'female' %}

            <p>Female</p>
          </div>

          <div class="textRow2 clear ">
            <label>Agreement</label>
            <span>:</span>
            <input name="" type="checkbox" value=""/>

            <div class="ch_top">I agree to the
              <a href="#">Terms of Service</a></div>
          </div>

          <div class="letbutton">
            <input class="letBtn" name="" type="submit" value="Let Me in !!"/>
          </div>
        </form>
      </div>
    </div>
    <div class="smBoxBot"></div>
  </div>
</div>